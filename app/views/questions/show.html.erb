<%= link_to "Back to questions", user_questions_path(user_id: params[:user_id]) %>

<h3><%= @question.question %></h3>

<%= form_for :validate, url: validate_user_question_path(params[:user_id]), method: :post do |f| %>
  <%= f.text_field :user_answer, label: "Your answer", autofocus: true %>
  <%= f.submit "Submit" %>
<% end %>